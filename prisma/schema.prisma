model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  reservations Reservation[]
  testimonials Testimonial[]
}

model Reservation {
  id        Int      @id @default(autoincrement())
  userId    Int
  date      DateTime
  time      String
  guests    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Testimonial {
  id        Int      @id @default(autoincrement())
  userId    Int
  content   String
  user      User     @relation(fields: [userId], references: [id])
}

model MenuItem {
  id        Int      @id @default(autoincrement())
  name      String
  description String
  price     Float
  imageUrl  String
}